rule "First Rule"

    when
        item1 : UserInfo (tipRizika == UserInfo.TipRizika.SLAB, 
        				destinacija == UserInfo.Destinacija.SRBIJA)
    then
        double pk1 = 150.00;
        double pk2 = 200.00;
        double pk3 = 250.00;
        
        double kR = item1.getKoefRizika();
        double kO = item1.getKoefOdraslih();
        double kD = item1.getKoefDece();
        double kDst = item1.getKoefDestinacije();
        int brO = item1.getBrOdraslih();
        int brD = item1.getBrDece();
        int brDn = item1.getBrDana();
        
        item1.setCenaPaketa1(pk1*kR*brO*kO*brD*kD*kDst*brDn);
        item1.setCenaPaketa2(pk2*kR*brO*kO*brD*kD*kDst*brDn);
        item1.setCenaPaketa3(pk3*kR*brO*kO*brD*kD*kDst*brDn);

end

